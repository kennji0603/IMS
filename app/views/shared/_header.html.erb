<header class="header">
  
    <div class="header-contents">
      <div class="header_logo">
        <% if user_signed_in? && current_user.admin%>
        <h1><%= link_to 'IMS', dashboard_index_path, class: "logo"%></h1>
        <p>~ItemsManagementSystem~</p>
        <%else%>
        <h1><%= link_to 'IMS', root_path, class: "logo"%></h1>
        <p>~ItemsManagementSystem~</p>
        <%end%>
      </div>    
          <div class="navbar">
            <ul class="navbar_nav">
             <% if user_signed_in? && current_user.admin?%>
             <li class="nav_item">
                <%= link_to "ログアウト",  destroy_user_session_path, method: :delete, class: "nav_link" %>
              </li> 

             <% elsif user_signed_in?%>
              <li class="nav_item">
                <%= link_to user_path(current_user.id), class: "nav_link" do %>
                <i class="fas fa-user"></i><label>マイページ</label>
                <% end %>
              </li>
              <li class="nav_item">
                <%= link_to cart_users_path, class: "nav_link" do %>
                <i class="fas fa-shopping-cart"></i><label>カート</label>
                <% end %>
              </li>
             <li class="nav_item">
                <%= link_to "ログアウト",  destroy_user_session_path, method: :delete, class: "nav_link" %>
              </li> 
             <% else %>
              <li class="nav_item">
                <%= link_to new_user_registration_path, class: "nav_link" do %>
                  <label>新規登録</label>
                <% end %>
              </li>
              <li class="nav_item">
                <%= link_to new_user_session_path, class: "nav_link" do %>
                  <label>ログイン</label>
                <% end %>
              </li>
              <hr>
              <li class="nav_item">
                 <%= link_to new_user_session_path, class: "nav_link" do %><i class="far fa-heart"></i><% end %>
              </li>
              <li class="nav_item">
                <%= link_to new_user_session_path, class: "nav_link" do %><i class="fas fa-shopping-cart"></i><% end %>
              </li>
             <% end %>
            </ul>  
          </div>
    </div>     
  
</header>
