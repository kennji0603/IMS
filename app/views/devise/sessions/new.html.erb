<%= render "shared/second-header"%>
<div class='account-page' id='account-page'>
  <div class='account-page__inner clearfix'>
    <div class='account-page__inner--left account-page__header'>
      <h2>ログイン</h2>
      <%= render "devise/shared/links"%>
    </div>
    <div class='account-page__inner--right user-form'>
      <%= form_with model: @user, url:user_session_path, local: true do |f|%>
      <div class='login-flash-message'>
        <%= flash[:notice] %>
        <%= flash[:alert] %>
      </div>
        <div class='field'>
          <div class='field-label'>
            <label class="form-text">メールアドレス</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.email_field :email, placeholder:"PC・携帯どちらでも可", autofocus: true%>
          </div>
          <div class='field'>
             <label class="form-text">パスワード</label>
             <span class="indispensable">必須</span>
            </div>
            <div class='field-input'>
              <%= f.password_field :password, placeholder:"6文字以上の半角英数字",autocomplete: "off"%>
            </div>
          </div>
          <div class='actions'>
            <%= f.submit "ログイン", class: 'btn'%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<%= render "shared/footer"%>