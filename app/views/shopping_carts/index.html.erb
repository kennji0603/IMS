<%= render "shared/header" %>
<div class="container d-flex justify-content-center mt-3">
  <div class="w-75">
    <h1>ショッピングカート</h1>

    <div class="offset-8 col-4">
      <div class="row">
        <div class="col-6">
          <h2>数量</h2>
        </div>
        <div class="col-6">
          <h2>小計</h2>
        </div>
      </div>
    </div>

    <hr>

    <div class="row">
      <% @user_cart_items.each do |user_cart_item| %>
        <% item = Item.find(user_cart_item.item_id) %>
        <div class="col-md-2 mt-2">
          <%= link_to item_path(item) do %>
              <%= image_tag item.image, class: "img-fuild w-100" %>
          <% end %>
        </div>
        <div class="col-md-6 mt-4">
          <h3 class="mt-4"><%= item.name %></h3>
        </div>
        <div class="col-md-2">
          <h3 class="w-100 mt-4"><%= user_cart_item.quantity %></h3>
        </div>
        <div class="col-md-2">
          <h3 class="w-100 mt-4">￥<%= user_cart_item.price_cents * user_cart_item.quantity %></h3>
        </div>
      <% end %>
    </div>

    <hr>

    <div class="offset-8 col-4">
      <div class="row">
        <div class="col-6">
          <h2>合計</h2>
        </div>
        <div class="col-6">
          <h2>￥<%= @user_cart.total.fractional / 100 %></h2>
        </div>
        
      </div>
    </div>
    <div class= "d-flex justify-content-end mt-3">
      <%= link_to "レンタルを続ける", items_path, class: "btn ics-favorite-button border-dark text-dark mr-3" %>
      <% if @user_cart_items.present?%>
       <%= link_to "レンタルを確定する", cart_users_path, method: :delete,class: "btn ics-submit-button btn-warning text-dark" %>
      <%end%>
    </div>
  </div>
</div>

<%= render "shared/footer"%>

