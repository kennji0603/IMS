<%= render "shared/header" %>

  <div class="d-flex justify-content-center mt-4 mb-4">
    <div class="row w-75">
      <div class="col-5 offset-1 ">
        <%= image_tag @item.image, class: "w-100 img-fuild" %>
      </div>

      <div class="col ">
        <div class="d-flex flex-column">
          <h1 class="">
           <%= @item.name %>
          </h1>
        
          <hr>
          <p class="d-flex align-items-end">
            ￥<%= @item.price %>（税込）
          </p>
          <hr>
        </div>

        <% if user_signed_in? %>
          <%= form_with url: cart_create_users_path, local: true do |f| %>
            <%= f.hidden_field :item_id, value: @item.id %>
            <%= f.hidden_field :name, value: @item.name %>
            <%= f.hidden_field :price, value: @item.price %>
            <div class="form-group row">
              <%= f.label "数量", class: "col-sm-2 col-form-label" %>
              <div class="col-sm-10">
                <%= f.number_field :quantity, min:1, value:1, class: "form-control  w-25 "%>
              </div>
            </div>
            <div class="row mt-4">
              <div class="col-7">
                <%= f.submit "カートに入れる", class: "btn ics-favorite-add-cart btn-success text-black w-100" %>
              </div>
            </div>  
          <% end %>
        <% end %> 
      </div>  
    </div>
  </div> 

<%= render "shared/footer"%>      