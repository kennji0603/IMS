<h1>商品管理</h1>
<table class="table table-responsive mt-5">

    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">画像</th>
        <th scope="col">商品名</th>
        <th scope="col">価格</th>
        
      </tr>
    </thead>
    <tbody>
      <% @items.each do |item| %>
      <tr>
        <th scope="row"><%= item.id %></td>
        <td><%= image_tag "/images/dummy.png", class: "img-fluid h-10" %></td>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        
      </tr>
      <% end %>
    </tbody>
  </table>